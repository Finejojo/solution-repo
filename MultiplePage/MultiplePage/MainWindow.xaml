<Window x:Class="MultiplePage.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MultiplePage"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions >
            <ColumnDefinition Width="0.25*" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <StackPanel Background="Bisque">
            <RadioButton x:Name="rbtn1" Content="Window 1" Checked="rbt1_checked"/>
            <RadioButton x:Name="rbtn2" Content="Window 2" Checked="rbt2_checked"/>
            <RadioButton x:Name="rbtn3" Content="Window 3" Checked="rbt3_checked"/>
        </StackPanel>
        <ContentControl x:Name="CC" Grid.Column="1"/>
    </Grid>
</Window>
